{
  "name": "threeplot",
  "version": "0.4.0",
  "description": "programmatically create 3d plots with threejs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "targets": {
    "types": false,
    "main": false
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "url": "https://github.com/marnec/threeplot"
  },
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/marnec"
  },
  "scripts": {
    "copy-fonts": "mkdir -p dist/fonts && cp -r src/fonts dist/fonts",
    "dev": "npx tsc --watch",
    "test": "jest",
    "e2e": "npm run clear-e2e && npx parcel test/e2e/index.html --dist-dir=docs",
    "build-all": "npm run build && npm run clear-e2e && npx parcel build test/e2e/index.html --dist-dir=docs --public-url https://marnec.github.io/threeplot/",
    "build": "npx tsc",
    "clear-e2e": "rm docs/*"
  },
  "alias": {
    "three": "./node_modules/three"
  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "troika-three-text": "0.49",
    "radash": "11.0.0"
  },
  "peerDependencies": {
    "three": "0.158.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.10",
    "@types/three": "0.158.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "parcel": "^2.10.3",
    "process": "^0.11.10",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2"
  }
}
